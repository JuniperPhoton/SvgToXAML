<Window x:Class="WpfDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button HorizontalAlignment="Left" Margin="25,2,0,2" >
            <Image Source="{StaticResource cloud_3_iconDrawingImage}"></Image>
        </Button>
        <Button HorizontalAlignment="Left" Margin="25,2,0,2" Width ="46"  Grid.Row="1">
            <Image Source="{StaticResource JOGDrawingImage}"/>
        </Button>
        <Button  Content="Change Base Color" Click="ChangeBaseColor_OnClick" HorizontalAlignment="Left" Margin="87,15,0,0" VerticalAlignment="Top" Width="139" Height="22"/>
        <Button Content="Change Single Colors" Click="ChangeSingleColor_OnClick" HorizontalAlignment="Left" Margin="87,15,0,0" VerticalAlignment="Top" Width="139" Grid.Row="1"/>
        <Path Data="{StaticResource cloud_3_iconGeometry}" Fill="#FF60A1FA" Stretch="Uniform" Margin="25,2,0,2" Grid.Row="2" HorizontalAlignment="Left"></Path>
        <TextBlock Margin="87,15,351,6" Grid.Row="2">Just a Path</TextBlock>
    </Grid>
</Window>
